<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/first_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp">

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                app:mtf_image="@drawable/ic_action_name"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="@string/name"
                    android:inputType="textPersonName" />

            </com.github.florent37.materialtextfield.MaterialTextField>


            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                app:mtf_image="@drawable/ic_action_mail"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress" />
            </com.github.florent37.materialtextfield.MaterialTextField>


            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                app:mtf_image="@drawable/ic_lock"
                app:mtf_labelColor="#666">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="@string/password"
                    android:inputType="textPassword" />
            </com.github.florent37.materialtextfield.MaterialTextField>



                <Button
                    android:layout_marginTop="20dp"
                    android:drawableStart="@drawable/ic_action_birthday"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/bBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffb8b8"
                    android:text="@string/birthday"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:drawableLeft="@drawable/ic_action_birthday" />

            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#78ffb8b8"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/radioButtonWoman"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radio_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#78ffb8b8"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/radioButtonMan"
                    android:textSize="20sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <CheckBox
                    android:id="@+id/cbTakanon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_takanon"/>

                <TextView
                    android:id="@+id/tvTakanon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/takanon"/>
            </LinearLayout>

            <Button
                android:id="@+id/bRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="#ffb8b8"
                android:text="@string/forRegistering"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!--<Button-->
                <!--android:id="@+id/bRegisterAsMatch"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="60dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="30dp"-->
                <!--android:layout_marginRight="30dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="#ffb8b8"-->
                <!--android:text="@string/RegisterAsMatch"-->
                <!--android:textColor="#ffffff"-->
                <!--android:textSize="24sp"-->
                <!--android:textStyle="bold" />-->


            <TextView
                android:id="@+id/tvToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="@string/bRegistered"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
